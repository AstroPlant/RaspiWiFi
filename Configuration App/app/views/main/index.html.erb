<div id="mainContent">
  <h1>WiFi Setup</h1>
  <div class="wifiIcon" /></div>
  <%=form_tag("/main/save_credentials", method: "get") do%>

    <ul>
      <li><%=label_tag(:ssid, "Select your WiFi network")%></li>
      <li class="wifiNetwork">
        <select id="ssid" name="ap_info", class="wifiNetworkInputs">
          <%for ap in @wifi_ap_hash do%>
              <option value='<%=ap[:ssid]%>+<%=ap[:encryption_type]%>'><%=ap[:ssid]%></option>
          <%end%>
        </select>
      </li>

      <li><%=label_tag(:wifi_key, "Your Wifi password")%></li>
      <li>
        <%=password_field_tag(:wifi_key, nil, class: "wifiNetworkInputs")%>
      </li>
	<li><%=label_tag(:api_url, "Your API url")%></li>
      <li>
        <%=text_field_tag(:api_url, nil, class: "wifiNetworkInputs")%>
      </li>
	<li><%=label_tag(:ws_url, "Your Websocket url")%></li>
      <li>
        <%=text_field_tag(:ws_url, nil, class: "wifiNetworkInputs")%>
      </li>
	<li><%=label_tag(:auth_serial, "Your serial key")%></li>
      <li>
        <%=text_field_tag(:auth_serial, nil, class: "wifiNetworkInputs")%>
      </li>
	<li><%=label_tag(:auth_secret, "Your password")%></li>
      <li>
        <%=text_field_tag(:auth_secret, nil, class: "wifiNetworkInputs")%>
      </li>

      <%=submit_tag("Connect!", class: "wifiConnectButton")%>
    </ul>

  <%end%>
